@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="img-item" src="@Url.Content("~/Content/image.jpg")" />
            <div class="carousel-caption">
                <h2>Trenerzy</h2>
                <p>Wysoko wyspecjalizowana kadra</p>
            </div>
        </div>

        <div class="item">
            <img class="img-item" src="@Url.Content("~/Content/image1.jpg")" />
            <div class="carousel-caption">
                <h2>Zajęcia</h2>
                <p>Duża różnorodność zajęć grupowych</p>
            </div>
        </div>

        <div class="item">
            <img class="img-item" src="@Url.Content("~/Content/image2.jpg")" />
            <div class="carousel-caption">
                <h1>Sprzęt</h1>
                <p>Najlepszej jakości sprzęt na naszej siłowni</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron">
    <h2><i class="glyphicon glyphicon-info-sign"></i> Informacja</h2>
    <p>@ViewBag.info</p>
</div>


<style>
    .carousel-caption {
        text-shadow: 2px 2px 4px rgba(15, 15, 15, 1);
    }
    .carousel-caption p
    {
        font-size: 30px;
    }
    .jumbotron p {
        font-size: 22px;
        font-weight: 300;
    }


</style>