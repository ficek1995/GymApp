@{
    ViewBag.Title = "Kontakt";
}
@model  IEnumerable<GymApp.Models.ViewsModels.TrainerContactViewModel>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="col-md-6">
        <address>
            Administracja<br />
            <i class="glyphicon glyphicon-envelope"></i> <a href="mailto:gymappwebmaster@gmail.com">gymappwebmaster@gmail.com</a>
        </address>
        <address>
            <h3>Kontakt do Trenerów</h3>
            @foreach (var trainer in Model)
            {
                <strong>@trainer.FirstName @trainer.LastName:</strong> <br />
                <i class="glyphicon glyphicon-envelope"></i> <a href="mailto:@trainer.Email">@trainer.Email</a><br />
                <i class="glyphicon glyphicon-phone"></i> @trainer.Phone<br /><br />
            }
        </address>
    </div>
    <div class="col-md-6">
        <h4>Tutaj jesteśmy <i class="fas fa-level-down-alt"></i></h4>       
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2563.9549287756336!2d22.67436431176355!3d50.012199984848635!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x473c9bd00702269d%3A0x34c3e02f77a47069!2sPa%C5%84stwowa+Wy%C5%BCsza+Szko%C5%82a+Techniczno-Ekonomiczna!5e0!3m2!1spl!2spl!4v1550944335108" 
                 width="350" height="180" frameborder="1" style="border:2" allowfullscreen>
        </iframe>
    </div>
</div>
