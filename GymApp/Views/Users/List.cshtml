@model GymApp.Models.ViewsModels.UsersListViewModel

@{
    ViewBag.Title = "View";
}

<h2>Zarządzanie użytkownikami</h2>
<p>
    <a href="@Url.Action(MVC.Users.Register())" class="btn btn-success">Dodaj Użytkownika</a>
</p>
<h2>Klienci</h2>
<table class="table">
    <tr>
        <th>
        Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Email
        </th>
        <th>
            Numer Telefonu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Usuń", MVC.Users.Delete(item.Id)) |
                @Html.ActionLink("Karnet", MVC.Tickets.Edit(item.Id))

            </td>
        </tr>
    }
</table>
 <h2>Trenerzy</h2>
 <table class="table">
     <tr>
         <th>
          Imię
         </th>
         <th>
           Nazwisko
         </th>
         <th>
             Email
         </th>
         <th>
             Numer Telefonu
         </th>
         <th></th>
     </tr>

     @foreach (var item in Model.Trainers)
     {
         <tr>
             <td>
                 @Html.DisplayFor(modelItem => item.FirstName)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.LastName)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.Email)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.PhoneNumber)
             </td>
             <td>
                 @Html.ActionLink("Usuń", MVC.Users.Delete(item.Id)) |
                 @Html.ActionLink("Karnet", MVC.Tickets.Edit(item.Id))

             </td>
         </tr>
     }
     </table>
